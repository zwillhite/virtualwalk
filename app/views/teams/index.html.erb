<h1>Listing teams</h1>

<table>
  <tr>
    <th>Team name</th>
    <th>Team details</th>
    <th>Team goal</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.team_name %></td>
    <td><%= team.team_details %></td>
    <td><%= team.team_goal %></td>
    <td><%= team.event_id %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


<h1>Listing users</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Username</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= user.username %></td>
    <td>
		<% if can? :read, user %>
			<%= link_to 'Show', user %>
		<% end %>
	</td>
    <td>
		<% if can? :manage, user %>
			<%= link_to 'Edit', edit_user_path(user) %>
		<% end %>
	</td>
	<td>
		<% if can? :manage, user %>
			<%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %>
		<% end %>
	</td>

  </tr>
<% end %>
</table>


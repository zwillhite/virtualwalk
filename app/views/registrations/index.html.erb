<h1>Registrations</h1>

<table>
  <tr>
  	<th>Event</th>
    <th>Personal Goal</th>
    <th>Team</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @registrations.each do |registration| %>
  <tr>
  	<td><%= registration.event.event_name %></td>
    <td><%= registration.personal_goal %></td>
    <td>
    <% if registration.team %>
	  <%= registration.team.team_name %>
	<% end %>
	</td>
	<td>
		<% if can? :read, registration %>
			<%= link_to 'Show', registration %>
		<% end %>
	</td>
    <td>
		<% if can? :manage, registration %>
			<%= link_to 'Edit', edit_registration_path(registration) %>
		<% end %>
	</td>
	<td>
		<% if can? :manage, registration %>
			<%= link_to 'Destroy', registration, confirm: 'Are you sure?', method: :delete %>
		<% end %>
	</td>
  </tr>
<% end %>
</table>	

<br />

<%= link_to 'New Registration', new_registration_path %>

<h1>Event Details</h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Event Name:</b>
  <%= @event.event_name %>
</p>

<p>
  <b>Goal:</b>
  <%= @event.goal %>
</p>

<p>
  <b>Start Date:</b>
  <%= @event.start_date %>
</p>

<p>
  <b>End Date:</b>
  <%= @event.end_date %>
</p>

<p>
  <b>Details:</b>
  <%= @event.details %>
</p>

<p>
  <b>Logo:</b>
  <%= @event.logo %>
</p>

<p>
  <b>Agency:</b>
  <%= @event.agency.name %>
</p>

<p>
  <b>Sponsor:</b>
  <%= @event.sponsor.name %>
</p>

<% if can? :manage, @event %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>
<%= link_to 'Back', events_path %>
